<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3CDCD"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imagencocacola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cocacola" />

    <com.omarshehe.forminputkotlin.FormInputText
        android:id="@+id/nombre"
        android:layout_width="356dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:form_label="Nombre del producto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagencocacola" />

    <com.omarshehe.forminputkotlin.FormInputText
        android:id="@+id/codigo"
        android:layout_width="356dp"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:form_label="Codigo del producto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Valor" />

    <com.omarshehe.forminputkotlin.FormInputText
        android:id="@+id/iva"
        android:layout_width="356dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:form_label="Exento de IVA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/codigo" />

    <com.omarshehe.forminputkotlin.FormInputText
        android:id="@+id/descripcion"
        android:layout_width="356dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:form_label="DescripciÃ³n del producto "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iva" />

    <com.kusu.loadingbutton.LoadingButton
        android:id="@+id/btnguardar"
        android:layout_width="268dp"
        android:layout_height="43dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/colorRed"
        android:fontFamily="serif"
        android:text="Agregar Producto"
        android:textColor="@color/white"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripcion"
        app:lb_isShadowEnable="true"
        app:lb_shadowHeight="5dp" />

    <com.omarshehe.forminputkotlin.FormInputText
        android:id="@+id/Valor"
        android:layout_width="356dp"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        app:form_label="Valor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre" />
</androidx.constraintlayout.widget.ConstraintLayout>