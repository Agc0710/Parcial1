<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3CDCD"
    tools:context=".ExentosIva">

    <ImageView
        android:id="@+id/img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cocacola" />

    <TextView
        android:id="@+id/informacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Productos Exentos de IVA"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img2" />


    <com.kusu.loadingbutton.LoadingButton
        android:id="@+id/btnconsultar"
        android:layout_width="268dp"
        android:layout_height="43dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/colorRed"
        android:fontFamily="serif"
        android:text="CONSULTAR PRODUCTOS"
        android:textColor="@color/white"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/informacion" />

    <com.kusu.loadingbutton.LoadingButton
        android:id="@+id/btnatras"
        android:layout_width="268dp"
        android:layout_height="43dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="@color/colorRed"
        android:fontFamily="serif"
        android:text="Ir atrás"
        android:textColor="@color/white"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnpromedio" />

    <com.kusu.loadingbutton.LoadingButton
        android:id="@+id/btncostosos"
        android:layout_width="268dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorRed"
        android:fontFamily="serif"
        android:text="Productos más costosos"
        android:textColor="@color/white"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnconsultar" />

    <com.kusu.loadingbutton.LoadingButton
        android:id="@+id/btnmenoscostoso"
        android:layout_width="268dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorRed"
        android:fontFamily="serif"
        android:text="productos menos costoso"
        android:textColor="@color/white"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btncostosos" />

    <com.kusu.loadingbutton.LoadingButton
        android:id="@+id/btnpromedio"
        android:layout_width="268dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorRed"
        android:fontFamily="serif"
        android:text="Promedio de productos"
        android:textColor="@color/white"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnmenoscostoso" />
</androidx.constraintlayout.widget.ConstraintLayout>